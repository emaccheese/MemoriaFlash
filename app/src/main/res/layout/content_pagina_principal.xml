<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPaginaPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.erik.memoriaflash.PaginaPrincipalActivity"
    tools:showIn="@layout/activity_pagina_principal"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RadioButton
           android:layout_width="0dp"
           android:layout_height="45dp"
           android:layout_weight="1"

           android:text="Materiales Ceramicos"
            android:textStyle="bold"
           android:id="@+id/rdBtnCeramicos"
           android:onClick="materiaSeleccionada" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Materiales Vitreos"
            android:textStyle="bold"
            android:id="@+id/rdBtnVitreos"
            android:onClick="materiaSeleccionada" />
   </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnInfoMateria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informacion de la Materia"

                android:onClick="opcionSeleccionada"
                style="@style/button_text"
                />
            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unidad 1"
                android:onClick="opcionSeleccionada"
                android:id="@+id/btnUnidad1"
                style="@style/button_text"
                />

            <Button
                android:background="@drawable/buttons_rojo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unidad 2"
                android:onClick="opcionSeleccionada"
                android:id="@+id/btnUnidad2"
                style="@style/button_text"
                />

            <Button
                android:background="@drawable/buttons_rojo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unidad 3"
                android:onClick="opcionSeleccionada"
                android:id="@+id/btnUnidad3"
                style="@style/button_text"
                />
            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resultados"
                android:onClick="opcionSeleccionada"
                android:id="@+id/btnResultadosGenerales"
                android:background="@drawable/buttons_rojo"
                style="@style/button_text"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
